<script type="text/javascript">
	let dictionary = [];
	function addWord( ) {
		var word = document.getElementById('newWord').value;
		dictionary.push(word);
		console.log(word);
		console.log(dictionary);
	}
	function findWord() {
		var dictionaryWord = document.getElementById('wordSearched').value;
		var positionFound = dictionary.indexOf(dictionaryWord);
		console.log(positionFound);
		if (positionFound != -1) {
			alert("Word found in dictionary.");
		} else {
			alert("Sorry! We couldn't find the word searched!")
		}
	}
</script>
